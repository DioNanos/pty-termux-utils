{
  "name": "@mmmbuto/pty-termux-utils",
  "version": "1.1.3",
  "description": "Shared PTY utilities for Termux/Android with graceful fallback",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "optionalDependencies": {
    "@mmmbuto/node-pty-android-arm64": "~1.1.0",
    "@lydell/node-pty-linux-arm64": "~1.2.0-beta.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:cjs": "node scripts/build-cjs.cjs",
    "postbuild": "npm run build:cjs",
    "prepare": "npm run build && npm run build:cjs",
    "prepublishOnly": "npm run build && npm run build:cjs"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "docs"
  ],
  "keywords": [
    "pty",
    "termux",
    "android",
    "node-pty",
    "terminal"
  ],
  "author": "DioNanos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DioNanos/pty-termux-utils.git"
  }
}
